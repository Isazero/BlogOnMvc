
@{
    Layout = "~/Views/Shared/_CreateFormLayout.cshtml";
    ViewBag.Title = "Add Comment";
}

<div class="row">
    <div class="col-md-4">
        @if (ViewBag.Comment != null)
        {
            using (Html.BeginForm("UpdateComment", "Comment", FormMethod.Post))
            {
                @Html.Hidden("commentId", (int)ViewBag.Comment.CommentId)
                <label>Content</label>
                @Html.TextArea("content", (string)ViewBag.Comment.Content, new { @class = "form-control", @rows = 5, @placeholder = "Enter Content" })
                <label>User Id</label>
                @Html.TextBox("userId", (int)ViewBag.Comment.UserId, new { @class = "form-control", @placeholder = "Enter User Id" })
                <label>Post Id</label>
                @Html.TextBox("postId", (int)ViewBag.Comment.PostId, new { @class = "form-control", @rows = 5, @placeholder = "Enter Content" })
                <label>Date Created</label>
                @Html.TextBox("dateCreated", (DateTime)ViewBag.Comment.DateCreated, new { @class = "form-control" })
                <input class="btn btn-primary" type="submit" name="submit" value="Submit" id="submit" style="margin-top: 5px" />
            }
        }
        else
        {
            using (Html.BeginForm("AddComment", "Comment", FormMethod.Post))
            {
                <label>Content</label>
                @Html.TextArea("content", null, new { @class = "form-control", @rows = 5, @placeholder = "Enter Content" })
                <label>User Id</label>
                @Html.TextBox("userId", null, new { @class = "form-control", @placeholder = "Enter User Id" })
                <label>Post Id</label>
                @Html.TextBox("postId", null, new { @class = "form-control", @rows = 5, @placeholder = "Enter Post Id" })
                <label>Date Created</label>
                @Html.TextBox("dateCreated", DateTime.Now, new { @class = "form-control" })
                <input class="btn btn-primary" type="submit" name="submit" value="Submit" id="submit" style="margin-top: 5px" />
            }
        }
    </div>
</div>
